
<div class="dropdown">

    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Snacks
    </button>

    <div class="dropdown-menu">
        @foreach (var category in Model)
        {
            <a class="dropdown-item" asp-controller="Snack" asp-action="List" style="color:black"
               asp-route-category="@category.CategoryName">@category.CategoryName</a>

        }
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-controller="Snack" asp-action="List" asp-route-categoria=""
           style="color:black">All snacks</a>
    </div>

</div>
